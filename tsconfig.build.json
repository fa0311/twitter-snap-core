{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": [
      "es2020",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "preserve"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/app"
  ]
}